{
    "CommentDivider1": {
        "prefix": ["#=="],
        "body": ["#===================================================================================================#"],
        "description": "one line comment divider"
    },

    "CommentDivider2": {
        "prefix": ["#==="],
        "body": [
            "#===================================================================================================#",
            "#       ${1:comment}",
            "#===================================================================================================#"
        ],
        "description": "multi-line comment divider"
    },

    "CommentDividerBegin": {
        "prefix": ["#==\\begin"],
        "body": [
            "#===================================================================================================#",
            "#      ${1|\\begin,\\end|}{${2:title}}",
            "#===================================================================================================#"
        ],
        "description": "begin-end comment divider"
    }
}
